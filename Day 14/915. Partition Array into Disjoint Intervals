class Solution {
    public int partitionDisjoint(int[] nums) 
    {
        int idx=0, pMax=nums[0], nMax=nums[0];
        
        for(int i=1;i<nums.length;i++)
        {
            if(nums[i]>=pMax)
                nMax = Math.max(nums[i],nMax);
            
            //if(nums[i]<pMax)
            else
            {
                idx=i;
                pMax=nMax;
            }
        }
        //System.out.println(idx);
        return idx+1;
    }
}
